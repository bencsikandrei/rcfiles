" general stuff
syntax on

let mapleader=' '

" I want my line numbers
set number

" tabs and spaces
set tabstop=4
set shiftwidth=4

set autoindent
set smartindent

" colors
set termguicolors

" show the column at 80, or disable it
nnoremap <Leader>cc :set colorcolumn=80<cr>
nnoremap <Leader>ncc :set colorcolumn-=80<cr>

